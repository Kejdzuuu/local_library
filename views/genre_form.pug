extends layout 

block content 
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Genre: 
      input#name.form-control(type='text', placeholdffer='Fantasy, Poetry etc.' name='name' value=(genre===undefined ? '' : genre.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg
